{
  "name": "askmynotes-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Controlled RAG backend for AskMyNotes",
  "author": {
    "name": "Team Horizon",
    "email": "harsh@greenhacker.in"
  },
  "scripts": {
    "build": "prisma generate && tsup src/server.ts --format esm --target node20 --outDir dist --clean --sourcemap",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "checkpointer:setup": "tsx src/scripts/setupCheckpointer.ts",
    "better-auth:generate": "better-auth generate --config src/auth.ts --yes",
    "ingest:pdf:query": "tsx src/scripts/ingestAndQueryPdf.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "postinstall": "npx prisma migrate deploy && npx prisma generate"
  },
  "dependencies": {
    "@better-auth/cli": "^1.4.19",
    "@google/genai": "^1.43.0",
    "@langchain/google-genai": "^2.1.20",
    "@langchain/langgraph": "^1.1.5",
    "@langchain/langgraph-checkpoint-postgres": "^1.0.1",
    "@langchain/pinecone": "^1.0.1",
    "@pinecone-database/pinecone": "^5.1.2",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "@react-email/components": "^1.0.8",
    "@react-email/render": "^2.0.4",
    "better-auth": "^1.4.19",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "nodemailer": "^8.0.1",
    "pdf-parse": "^2.4.5",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.19",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.3.1",
    "@types/nodemailer": "^7.0.11",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "prisma": "^7.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}